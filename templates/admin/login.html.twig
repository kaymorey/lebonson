<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Connexion</title>
	<link rel="stylesheet" type="text/css" href="../{{MEDIA_PATH}}/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="../{{MEDIA_PATH}}/css/admin.css">
	<script src="../{{MEDIA_PATH}}/js/jquery-1.9.1.min.js"></script>
</head>
<body id="login">
	<section class="main">
		<div class="container">
			<div class="row login-container">
				<div>
					{% if errors %}
					<div class="alert alert-error">
						{% for error in errors %}
							{{ error }}
							{% if loop.last == false %}
							<br />
							{% endif %}
						{% endfor %}
					</div>
					{% endif %}

					<h2>Accès sécurisé</h2>

					<form action="login.php" method="post">
						<label for="login">Login</label>
						<input type="text" id="login" name="login" value="" required />

						<label for="password">Mot de passe</label>
						<input type="password" id="password" name="passwd" required />
						<br />
						<button type="submit" class="btn btn-primary">Connexion</button>
					</form>
				</div>
			</div>
		</div>
	</section>
<footer>
	{# include 'footer.html.twig' #}
</footer>
</body>
</html>